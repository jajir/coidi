<html t:title="message:title" t:type="layout"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
    	<t:form t:id="loginForm" class="a-form">
			<t:errors/>
			<div class="row">
				<t:label for="userName"/>
				<input t:type="TextField" t:id="userName" t:validate="required,minlength=3" size="30"/>
			</div>
			<div class="row">
	            <t:label for="password"/>
	            <input t:type="PasswordField" t:id="password" t:validate="required,minlength=3" size="30"/>
			</div>
			<div class="row">
				<span class="label">
	            	<t:pageLink page="registration">Sign up</t:pageLink>
            	</span>
	            <t:submit value="Login" />
			</div>
    	</t:form>
</html>